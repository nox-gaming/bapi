{
  "name": "nox-api",
  "version": "0.0.1",
  "description": "A simple Nox api",
  "main": "index.js",
  "scripts": {
    "start": "npm run css-build && node server.js",
    "dev": "./node_modules/.bin/nodemon server.js",
    "css:build": "./node_modules/.bin/node-sass -q -x ./public/sass/ -o ./public/css/ -r --output-style compressed",
    "css:watch": "./node_modules/.bin/node-sass -q -x ./public/sass/ -o ./public/css/ -r --output-style expanded -w",
    "deploy": "now --dotenv=.env"
  },
  "keywords": [],
  "author": "jaimelacarbonara@gmail.com",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "signale": "^1.3.0",
    "statuses": "^1.5.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "bulma": "^0.7.1",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.3"
  }
}
